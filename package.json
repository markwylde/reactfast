{
  "name": "reactfast",
  "version": "1.0.0",
  "description": "A fast and simple way to build testable react apps",
  "main": "index.js",
  "scripts": {
    "start": "npm run build && servatron --spa -d dist",
    "develop": "servatron --spa -d dist & npm run watch",
    "watch": "npm run build:static & esbuild --watch --minify --bundle ./src/index.tsx --outdir=./dist --jsx-factory=h --jsx-fragment=Fragment --loader:.js=jsx",
    "build": "esbuild --minify --bundle ./src/index.tsx --outdir=./dist --jsx-factory=h --jsx-fragment=Fragment --loader:.js=jsx && npm run build:static",
    "build:static": "cp src/robots.txt dist/robots.txt && cp src/index.html dist/index.html && cp src/style.css dist/style.css",
    "test": "c8 node -r ./sucrase.js tests",
    "lint": "eslint ."
  },
  "keywords": [],
  "author": "Mark Wylde <me@markwylde.com> (https://github.com/markwylde)",
  "license": "MIT",
  "devDependencies": {
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^5.11.0",
    "@typescript-eslint/parser": "^5.11.0",
    "basictap": "^3.1.0",
    "c8": "^7.11.0",
    "esbuild": "^0.14.20",
    "eslint": "^7.32.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-react": "^7.26.1",
    "semistandard": "^16.0.1",
    "servatron": "^2.2.3",
    "sucrase": "^3.20.3"
  },
  "dependencies": {
    "linkedom": "github:markwylde/linkedom",
    "preact": "^10.6.5"
  },
  "directories": {
    "test": "tests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/markwylde/reactfast.git"
  },
  "bugs": {
    "url": "https://github.com/markwylde/reactfast/issues"
  },
  "homepage": "https://github.com/markwylde/reactfast#readme"
}
