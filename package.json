{
  "name": "reactfast",
  "version": "1.0.0",
  "description": "A fast and simple way to build testable react apps",
  "main": "src/index.js",
  "scripts": {
    "start": "npm run build && servatron --spa -d dist",
    "develop": "servatron --spa -d dist & npm run watch",
    "watch": "npm run build:static & esbuild --splitting --format=esm --watch --bundle ./src/index.tsx --outdir=./dist --jsx-factory=h --jsx-fragment=Fragment --loader:.js=jsx",
    "build": "esbuild --splitting --format=esm --minify --bundle ./src/index.tsx --outdir=./dist --jsx-factory=h --jsx-fragment=Fragment --loader:.js=jsx && npm run build:static",
    "build:static": "cp src/robots.txt dist/robots.txt && cp src/index.html dist/index.html && cp src/style.css dist/style.css",
    "test": "c8 node -r ./tools/sucrase.js tests",
    "lint": "eslint ."
  },
  "keywords": [
    "react",
    "preact",
    "compiler",
    "jsx",
    "typescript",
    "testing",
    "tdd",
    "spa"
  ],
  "author": "Mark Wylde <me@markwylde.com> (https://github.com/markwylde)",
  "license": "MIT",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "basictap": "^3.2.1",
    "c8": "^7.11.0",
    "esbuild": "^0.14.21",
    "eslint": "^7.32.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-react": "^7.28.0",
    "linkedom": "^0.14.1",
    "semistandard": "^16.0.1",
    "servatron": "^2.2.3",
    "settings": "^0.1.1",
    "sucrase": "^3.20.3"
  },
  "dependencies": {
    "preact": "^10.6.6"
  },
  "directories": {
    "dist": "dists"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/markwylde/reactfast.git"
  },
  "bugs": {
    "url": "https://github.com/markwylde/reactfast/issues"
  },
  "homepage": "https://github.com/markwylde/reactfast#readme"
}
